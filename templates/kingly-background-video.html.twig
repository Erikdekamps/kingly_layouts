{#
/**
 * @file
 * Theme implementation for a background video.
 *
 * Available variables:
 * - video_url: The URL of the video file.
 * - loop: Whether the video should loop.
 * - autoplay: Whether the video should autoplay.
 * - muted: Whether the video should be muted.
 * - preload: The preload attribute for the video ('auto', 'metadata', 'none').
 */
#}
{% if video_url %}
  <div class="kingly-layout__video-wrapper">
    <video class="kingly-layout__video"
           src="{{ video_url }}"
           preload="{{ preload }}"
           {% if autoplay %}autoplay{% endif %}
      {% if loop %}loop{% endif %}
      {% if muted %}muted{% endif %}
           playsinline
           aria-hidden="true">
      {# Provide a fallback for browsers that don't support the video tag. #}
      Your browser does not support the video tag.
    </video>
  </div>
{% endif %}
