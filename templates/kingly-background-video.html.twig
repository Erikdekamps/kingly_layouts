{#
/**
 * @file
 * Theme implementation for a background video.
 *
 * Available variables:
 * - video_url: The safe, validated URL of the video file.
 * - loop: Whether the video should loop.
 * - autoplay: Whether the video should autoplay.
 * - muted: Whether the video should be muted.
 * - preload: The preload attribute for the video ('auto', 'metadata', 'none').
 */
#}
{% if video_url %}
  <div class="kl__video-wrapper">
    <video class="kl__video"
      src="{{ video_url }}"
      preload="{{ preload }}"
      {% if autoplay %}autoplay{% endif %}
      {% if loop %}loop{% endif %}
      {% if muted %}muted{% endif %}
      playsinline
      aria-hidden="true">
      {# Provide a translatable fallback for browsers that do not support it. #}
      {{ 'Your browser does not support the video tag.'|t }}
    </video>
  </div>
{% endif %}
